<%- include ../partials/header.ejs %>

<%- include ../partials/top_nav.ejs %>
 
<main class="container">
    <br>
    <a href="/products/add" class="btn btn-primary"><i class="fa-solid fa-plus fa-lg"></i> Add Product</a>
    <br>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Company</th>
              <th scope="col">Price</th>
              <th scope="col">   Edit / Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (let index = 0; index < ProductList.length; index++) { %>
                <tr>
                    <td><%= ProductList[index].name %></td>
                    <td><%= ProductList[index].company %></td>
                    <td><%= ProductList[index].price %></td>
                    <td>
                      <a href="/products/edit/<%= ProductList[index].id %>" class="btn btn-info btn-sm"><i class="fa-solid fa-file-pen fa-lg"></i> Edit</a>                     
                      <a class="btn btn-warning btn-sm" href="/products/delete/<%= ProductList[index].id %>"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>               
                </tr>
            <% } %>
          </tbody>
    </table>
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>